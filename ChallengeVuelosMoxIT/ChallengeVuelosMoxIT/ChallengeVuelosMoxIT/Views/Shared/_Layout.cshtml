<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MoxIT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        @Html.ActionLink("Vuelos MoxIT", "Listar", "Vuelo", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Listar","Vuelo")">Próximos vuelos<span class="sr-only">(current)</span></a>
                </li>
            </ul>
                        
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

        <div class="footer-copyright text-center py-2 mt-5" id="footer">

            Tecnicatura en Desarrollo Móvil /
            <strong>Email:</strong>   <a class="text-primary" href="mailto:margisetoledo@gmail.com">margisetoledo@gmail.com</a><br />

            <p>&copy; @DateTime.Now.Year - Challenge Vuelos</p>
        </div>
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
</body>
</html>
